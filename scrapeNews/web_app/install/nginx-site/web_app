server {
    listen 5009;
    server_name 101.53.136.82;
    
    location /static {
        alias /path/to/web_app/static;
        autoindex on;
        expires max;
    }

    location /logfiles {
        alias /path/to/deploy/logs;
        autoindex on;
        
        location ~* \.log{
            add_header Content-Type text/plain;
        }
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/path/to/web_app/web_app.sock;
    }
}
